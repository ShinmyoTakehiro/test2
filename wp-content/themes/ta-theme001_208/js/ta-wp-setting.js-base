    if ( 'valid' == ta_common_side2wrap_onoff ) {
      jQuery('#outer-sidebar-container #sidebar').css('height', (body_wrap_height - sidebar_top_distance) + 'px');
    } else {
      var pad_top = parseInt(jQuery('#container #sidebar').css('padding-top'), 10);
      var pad_bottom = parseInt(jQuery('#container #sidebar').css('padding-bottom'), 10);
      var total_pad = pad_top + pad_bottom;
      jQuery('#container #sidebar').css('min-height', (container_height - total_pad) + 'px');
    }
  }
  if ( 'valid' == ta_sidebarsub_frame_arrange_height_onoff ) {
    if ( 'valid' == ta_common_side2wrap_onoff ) {
      jQuery('#outer-sidebarsub-container #sidebarsub').css('height', (body_wrap_height - sidebarsub_top_distance) + 'px');
    } else {
      var pad_top = parseInt(jQuery('#container #sidebarsub').css('padding-top'), 10);
      var pad_bottom = parseInt(jQuery('#container #sidebarsub').css('padding-bottom'), 10);
      var total_pad = pad_top + pad_bottom;
      jQuery('#container #sidebarsub').css('min-height', (container_height - total_pad) + 'px');
    }
  }
   
