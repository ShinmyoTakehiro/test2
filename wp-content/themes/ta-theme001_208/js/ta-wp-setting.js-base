    jQuery('#ta-global-navi-container #ta-global-navi > ul > li:last-child > ul').css('margin-left', target_w + 'px');
    var target_w = jQuery(this).width() * (- 2 * ta_header_glabalsubmenu_width) / 100;
    jQuery('#ta-global-navi-container #ta-global-navi > ul > li:last-child > ul > li > ul').css('margin-left', target_w + 'px');
  });
  
  /******************* サイドバー・サブサイドバーの高さ合わせ *******************/
