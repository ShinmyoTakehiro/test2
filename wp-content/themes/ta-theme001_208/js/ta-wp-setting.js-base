  });
  jQuery('#ta-global-navi-container #ta-global-navi > ul > li:last-child').mouseover(function(){
    var target_w = jQuery(this).width() * ta_header_glabalsubmenu_width / 100;
    jQuery('#ta-global-navi-container #ta-global-navi > ul > li:last-child > ul').css('width', target_w + 'px');
