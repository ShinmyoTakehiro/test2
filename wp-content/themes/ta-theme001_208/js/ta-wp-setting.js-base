/******************* 操作解析が可能になったら実行 *******************/
jQuery( function() {
  /******************* iPad処理 *******************/
  if ( 'ipad' == ta_device_name ) {
    jQuery('#body-wrap').css('min-width', wrap_width + 'px');
    jQuery('#body-wrap').css('width', '100%');
    jQuery('#outer-footer-container').css('min-width', wrap_width + 'px');
    jQuery('#outer-footer-container').css('width', '100%');
  }

  /******************* バックトゥートップスクロール *******************/
  if ( 'valid' == ta_common_back2top_text_fixed_onoff ) {
    jQuery('#ta_backto_top').hide();
    var scrollPos = jQuery(this).scrollTop();
    var viewPos = ta_common_back2top_fm_top_amount;
    if(scrollPos > viewPos) {
      jQuery('#ta_backto_top').fadeIn('slow');
    } else {
      jQuery('#ta_backto_top').fadeOut('slow');
    }
  }

  /***** モバイル時のメニューアコーディオン表示 *******************/
  jQuery('#ta-mb-global-navi-container').hide();
  jQuery('#ta-mb-global-navi-menubuttom').on( 'click', function() {
    jQuery('#ta-mb-global-navi-container').slideToggle();
  } );

  /***** アディショナルモード時のアコーディオン表示 *******************/
  jQuery('#additional-container').hide();
  jQuery('#additional-trigger').on( 'click', function() {
    if ( 'none' == jQuery('#additional-container').css('display') ) {
      jQuery('#additional-icon').addClass('closer-icon');
      jQuery('#additional-icon').removeClass('trigger-icon');
    } else {
      jQuery('#additional-icon').addClass('trigger-icon');
      jQuery('#additional-icon').removeClass('closer-icon');
    }
    jQuery('#additional-container').slideToggle();
    jQuery('html,body').animate({ scrollTop: 0 }, 'slow');
    return false;
  });

  /***** アコーディオンショートコード用 *******************/
  jQuery('.ta-accordion-title').each(function(){
    var refid = jQuery(this).attr('id');
    jQuery('#' + refid.replace('_title', '_disp')).hide();
    jQuery('#' + refid).on( 'click', function() {
      jQuery('#' + refid.replace('_title', '_disp')).slideToggle();
    } );
  });

});


